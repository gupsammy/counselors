#!/usr/bin/env node
// Fake amp binary for testing (reads stdin)
let input = '';
process.stdin.setEncoding('utf-8');
process.stdin.on('data', (chunk) => { input += chunk; });
process.stdin.on('end', () => {
  if (input.includes('Reply with exactly: OK')) {
    process.stdout.write('OK\n');
  } else {
    process.stdout.write('Amp response: Review complete.\n');
  }
});
